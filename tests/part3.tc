int globe;

int check(int isNeg)
{
	if(isNeg<0)
	{
		return 1;
	}
	else
	{
		return 0;
	}
}

int factorial(int n)
{
	if(check(n))
	{
		write("No negative values in factorial ya dingus: ", n);
		return -1;
	}
	if(n >= 1)
	{
		return n * factorial(n-1);
	}
	else
	{
		return 1;
	}
}

int square(int base, int power)
{
	int retVal;
	int i;
	i = power;
	retVal = 1;
	while(i > 0)
	{
		retVal = retVal * base;
		i = i - 1;
	}

	return retVal;
}

int printGlobal(int modifier)
{
    int result;
    result = globe - modifier;
    write(result);
	return;
}
